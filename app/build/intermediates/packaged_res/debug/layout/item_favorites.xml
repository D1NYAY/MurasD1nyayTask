<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/button_style_settings_profile"
    android:elevation="10dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/read_books"
        android:src="@drawable/ic_book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/name_book_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_book"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_name_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ff_roboto_regular"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_author_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ff_roboto_regular"
            android:text="@string/author"
            android:textColor="@color/gray"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="92dp"
        android:contentDescription="@string/favorites"
        android:src="@drawable/ic_favorites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/iv_book"
        app:layout_constraintTop_toBottomOf="@id/name_book_layout">

        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/star"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="@string/star"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/star"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="4dp"
            android:contentDescription="@string/star"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/star"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/ff_roboto_regular"
            android:text="@string/_0"
            android:textColor="@color/yellow"
            android:textSize="18sp" />

        <!-- <RatingBar
        можешь использовать этот способ для звезд с ним будет легче
        но главное что бы вид был похож
             android:numStars="5"
             android:stepSize="1"
             android:rating="5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:progressTint="@color/yellow"
              />-->
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>